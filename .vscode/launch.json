{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(Cygwin) Debug sds_stream.exe",
      "type": "cppdbg",
      "request": "launch",

      "program": "${workspaceFolder}\\sds_stream.exe",
      "args": [
        "USB0::0xF4EC::0x1012::SDSAHBAX6R0452::INSTR"
      ],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "externalConsole": false,

      "MIMode": "gdb",
      /* Let PATH find gdb */
      "environment": [
        { "name": "PATH", "value": "C:\\cygwin64\\bin;${env:PATH}" }
      ],

      "preLaunchTask": "Cygwin: make",
      "setupCommands": [
        { "description": "Enable pretty-printing", "text": "-enable-pretty-printing", "ignoreFailures": true }
      ]
    }
  ]
}
